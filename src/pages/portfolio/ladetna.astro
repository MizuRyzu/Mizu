    <img src="/ladenta-m-sluzby.webp" alt="Ladenta Mobil" class="w-[270px] h-auto rounded-lg shadow-lg" />
    <img src="/ladenta-m-cennik.webp" alt="Ladenta Mobil" class="w-[270px] h-auto rounded-lg shadow-lg" />
