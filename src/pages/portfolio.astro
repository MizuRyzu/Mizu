---
import Baselayout from "../layouts/BaseLayout.astro";
import PortfolioCard from "../components/PortfolioCard.astro";
import chevrons from "../images/chevrons-up.svg";

const pageTitle = "Projekty - Michal Dekýš";
const description = "Portfólio Michala Dekýša, obsahujúce jeho projekty.";
const ogLocale = "sk_SK";
const ogTitle = "Michal Dekýš - Projekty";
const ogImage = "";
const ogUrl = Astro.url.href;
const ogImageAlt = "Logo Michala Dekýša";
const headerTitle = "Portfolio";

---

<Baselayout
  pageTitle={pageTitle}
  description={description}
  ogLocale={ogLocale}
  ogTitle={ogTitle}
  ogImage={ogImage}
  ogUrl={ogUrl}
  ogDescription={description}
  ogImageAlt={ogImageAlt}
  headerTitle={headerTitle}
>
  <div class="vertical-scroll-container">
    <div class="vertical-scroll-slide">
      <PortfolioCard
        title="Zubná ambulancia"
        label="Web Ladenta"
        imageUrl="/ladenta-home.webp"
        description="Webstránka pre zubnú ordináciu Ladenta, ktorá ponúka moderné a funkčné riešenia pre pacientov."
        projectTarget="/portfolio/ladetna"
      />
    </div>

    <div class="vertical-scroll-slide">
      <PortfolioCard
        title="Krátenie poistného plnenia"
        label="Web poistné udalosti"
        imageUrl="/kratenie-home.webp"
        description="Webová stránka pre projekt Krátenie poistného plnenia, ktorá sa zaoberá optimalizáciou procesov v oblasti poistných udalostí."
        projectTarget="/portfolio/kratenie"
      />
    </div>

    <div class="vertical-scroll-slide">
      <PortfolioCard
        title="Advokátska kancelária"
        label="Web advokátska kancelária"
        imageUrl="/rhlegal-home.webp"
        description="Webstránka pre advokátsku kanceláriu RH Legal, ktorá poskytuje právne služby a poradenstvo."
        projectTarget="/portfolio/rhlegal"
      />
    </div>
  </div>
  <div class="flex-1 flex justify-center items-center">
    <img src={chevrons.src} alt="Chevrons" width="50" height="50" />
  </div>
</Baselayout>
