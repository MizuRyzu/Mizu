---
import { Image } from "astro:assets";
import Baselayout from "../layouts/BaseLayout.astro";
import quote from "../images/quote.svg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import fish from "../images/fish.png";

const lang = getLangFromUrl(Astro.url) as "sk" | "cz" | "en" | "la";
const t = useTranslations(lang);

const pageTitle = "Portfolio - Michal Dekýš";
const description = t("description.index");
const ogLocale = "sk_SK";
const ogTitle = "Michal Dekýš - Portfolio";
const ogImage = "";
const ogUrl = Astro.url.href;
const ogImageAlt = "Logo Michala Dekýša";
const headerTitle = t("page.index");

// Navigačné položky pre domovskú stránku
const navItems = [
  { key: "zrucnosti", label: t("nav.skills"), href: "/zrucnosti" },
  { key: "porfolio", label: t("nav.portfolio"), href: "/portfolio" },
  { key: "o-mne", label: t("nav.about"), href: "/o-mne" },
];
---

<Baselayout
  pageTitle={pageTitle}
  description={description}
  ogLocale={ogLocale}
  ogTitle={ogTitle}
  ogImage={ogImage}
  ogUrl={ogUrl}
  ogDescription={description}
  ogImageAlt={ogImageAlt}
  headerTitle={headerTitle}
  navItems={navItems}
>

  <div class="flex-1 flex flex-col">
    <div class="space-y-8">
      <p class="text-xl text-text">
        <span class="underline">Frontend</span> Developer <span
          class="text-primary">&</span
        >&nbsp;<span class="underline">UI</span>&nbsp;Desingner
      </p>

      <div class="text-xl text-text-secondary lg:w-[450px]">
        <Image src={quote} alt="Quote" class="h-5 w-5" loading="eager" />
        
        <p class="indent-5">{t("home.text")}</p>

        <div class="flex justify-end">
          <Image src={quote} alt="Quote" class="h-5 w-5" loading="eager" />
        </div>
      </div>
    </div>

    <div class="flex-1 flex items-center justify-center lg:justify-end lg:items-end lg:mb-10">
      <div class="p-5 rounded-2xl inset-shadow-[0_0_3px_0px_rgba(246,247,249,25)] bg-background-secondary">
        <p class="normal-case text-text-secondary">
          &lt;!-- Level up --&gt;
        </p>

        <p class="normal-case">
          <span style="color: #a7e6fd">&lt;</span><span style="color: #fc8f94">script</span><span style="color: #f1b1fd"> type</span><span style="color: #a7e6fd">="</span><span style="color: #fff09e">text/javascript</span><span style="color: #a7e6fd;">"&gt;</span>
        </p>

        <p class="ml-5 normal-case">
          <span style="color: #f1b1fd">function</span><span style="color: #a7e6fd"> getInspiration</span><span style="color: #f3d009">() &#123;</span>
        </p>

        <p class="ml-10 normal-case">
          <span style="color: #a7e6fd">if</span><span style="color: #f1b1fd"> (</span><span style="color: #f8f8f8">morningDay</span><span style="color: #f1b1fd"> ===</span><span style="color: #a7e6fd"> '</span><span style="color: #fff09e">depressed</span><span style="color: #a7e6fd">'</span><span style="color: #f1b1fd" >) &#123;</span>
        </p>

        <p class="ml-16 normal-case">
          <span style="color: #a7e6fd">startCoding()</span><span style="color: #f1b1fd"> &&</span><span style="color: #a7e6fd"> getAwsome()</span>
        </p>

        <p class="ml-10"><span style="color: #f1b1fd">&#x7D;</span></p>

        <p class="ml-5"><span style="color: #f3d009">&#x7D;</span></p>

        <p class="normal-case">
          <span style="color: #a7e6fd">&lt;/</span><span style="color: #fc8f94">script</span><span style="color: #a7e6fd;">&gt;<span>
        </p>
      </div>
    </div>
  </div>
</Baselayout>
