---
import { Image } from "astro:assets";
import Baselayout from "../layouts/BaseLayout.astro";
import quote from "../images/quote.svg";

const pageTitle = "Portfolio - Michal Dekýš";
const description = "Portfólio stránka Michala Dekýša - Frontend Developer & UI Designer";
const ogLocale = "sk_SK";
const ogTitle = "Michal Dekýš - Portfolio";
const ogImage = "";
const ogUrl = Astro.url.href;
const ogImageAlt = "Logo Michala Dekýša";
const headerTitle = "Michal Dekýš";

---

<Baselayout
  pageTitle={pageTitle}
  description={description}
  ogLocale={ogLocale}
  ogTitle={ogTitle}
  ogImage={ogImage}
  ogUrl={ogUrl}
  ogDescription={description}
  ogImageAlt={ogImageAlt}
  headerTitle={headerTitle}
>

  <div class="flex-1 flex flex-col">
    <div class="space-y-8">
      <p class="text-xl text-text">
        <span class="underline">Frontend</span> Developer <span
          class="text-primary">&</span
        >&nbsp;<span class="underline">UI</span>&nbsp;Desingner
      </p>

      <div class="text-xl text-text-secondary lg:w-[450px]">
        <Image src={quote} alt="Quote" class="h-5 w-5" loading="eager" />
        
        <p class="indent-5">Tvorím rýchle a krásne webstránky pomocou Astro, Tailwind a ďalších moderných technológií. Dôraz kladiem na UX, dizajn, čistý kód a výkon.</p>

        <div class="flex justify-end">
          <Image src={quote} alt="Quote" class="h-5 w-5" loading="eager" />
        </div>
      </div>
    </div>
  </div>
</Baselayout>
