---
import Baselayout from "../../layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { Image } from "astro:assets";
import quote from "../../images/quote.svg";
import fotka from "../../images/fotka.png";

const lang = getLangFromUrl(Astro.url) as "sk" | "cz" | "en" | "la";
const t = useTranslations(lang);

const pageTitle = "O mne - Michal Dekýš";
const description = t("description.skusenosti");
const ogLocale = "sk_SK";
const ogTitle = "Michal Dekýš - O mne";
const ogImage = "";
const ogUrl = Astro.url.href;
const ogImageAlt = "Logo Michala Dekýša";
const headerTitle = t("page.o-mne");

const navItems = [
  { key: "index", label: t("nav.home"), href: "/en/index" },
  { key: "zrucnosti", label: t("nav.skills"), href: "/en/zrucnosti" },
  { key: "skusenosti", label: t("nav.experience"), href: "/en/skusenosti" },
];
---

<Baselayout
  pageTitle={pageTitle}
  description={description}
  ogLocale={ogLocale}
  ogTitle={ogTitle}
  ogImage={ogImage}
  ogUrl={ogUrl}
  ogDescription={description}
  ogImageAlt={ogImageAlt}
  headerTitle={headerTitle}
  navItems={navItems}
>
<div class="flex-1 flex flex-col lg:flex-row lg:justify-between">
  <div class="mt-8 text-text-secondary lg:w-1/2">
    <Image src={quote} alt="Quote" class="h-5 w-5" loading="eager" />

    <div class="space-y-5">
      <p class="indent-5 text-sm lg:text-xl">{t("omne.text1")}</p>
      <p class="indent-5 text-sm lg:text-xl">{t("omne.text2")}</p>
      <p class="indent-5 text-sm lg:text-xl">{t("omne.text3")}</p>
    </div>

    <div class="flex justify-end">
      <Image src={quote} alt="Quote" class="h-5 w-5" loading="eager" />
    </div>
  </div>

  <div class="flex-1 flex flex-col items-center justify-center lg:w-1/2 lg:items-end lg:justify-end lg:mb-10">
    <div class="flex flex-col items-center lg:w-[350px]">
      <div class="border-foto">
        <img src={fotka.src} alt={t("omne.alt")} loading="eager" width="180" height="180" />
      </div>

      <a href="/kontakt" class="button uppercase mt-10">{t("kontaktovat")}</a>
    </div>
  </div>
</div>
</Baselayout>